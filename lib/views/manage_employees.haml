  function encode_query_data(data)
  {
     var ret = [];
     for (var d in data)
        ret.push(encodeURIComponent(d) + "=" + encodeURIComponent(data[d]));
     return ret.join("&");
  }

  function update_ui() {
    window.location.reload();
  }


  add_employee = function() {
    var employee_name = $(':input[id="new_employee_name"]').val();

    $.ajax({
      url: "/api/add_employee?" + encode_query_data({"employee_name": employee_name}),
      success: function(data) {
        update_ui();
      }
    });
  }

  del_employee = function(employee_name) {
    $.ajax({
      url: "/api/delete_employee?" + encode_query_data({"employee_name": employee_name}),
      success: function(data) {
        update_ui();
      }
    });
  }


  set_working_for_employee = function(employee_name) {
    var working = $(':input[id="check_working_' + employee_name + '"]:checked').val() !== undefined;

    $.ajax({
      url: "/api/set_working_for_employee?" + encode_query_data({
        "employee_name": employee_name,
        "working": working
      }),
      success: function(data) {
        //update_ui();
      },
      error: function() {
        update_ui();
      }
    });
  }


  map_task_to_employee = function(employee_name, task_name, workload, success_handler, error_handler) {
    $.ajax({
      url: "/api/map_task_to_employee?" + encode_query_data({
        "employee_name": employee_name,
        "task_name": task_name,
        "workload": workload
      }),
      success: success_handler,
      error: error_handler
    });
  }

  del_task_from_employee = function(employee_name, task_name, success_handler, error_handler) {
    $.ajax({
      url: "/api/del_task_from_employee?" + encode_query_data({
        "employee_name": employee_name,
        "task_name": task_name
      }),
      success: success_handler,
      error: error_handler
    });
  }


  $(function() {
    $('.changeable_cell').click(function() {
      var jq_cell = $(this);
      var old_content = jq_cell.html().trim();

      jq_cell.html('<input type="text" style="width: 30px"/>');
      var jq_input_field = jq_cell.find("input");
      var abort_editing = function() {
        jq_input_field.remove();
        jq_cell.html(old_content);
      }

      var exit_handler = function() {
        var content = jq_input_field.val();
        jq_input_field.remove();

        if(content != old_content) {
          // find employee and task for this cell
          var jq_tr_employee = jq_cell.parent();
          var col = jq_tr_employee.children().index(jq_cell);
          var jq_th_task = jq_tr_employee.parent().children().first().find(':nth-child('+(col+1)+')');

          var task = jq_th_task.html().trim();
          var employee = jq_tr_employee.children().first().find('.employee_row_header').html().trim();

          if(content.match(/^[1-9]\d*$/)) {
            // number we can use
            var number = parseInt(content);

            map_task_to_employee(employee, task, number,
              function() {
                jq_cell.html(number);
              },
              function() {
                jq_cell.html("error");
              }
            );
          } else if(content.match(/^$|^0$/)) {
            // empty or zero, so delete
            del_task_from_employee(employee, task,
              function() {
                jq_cell.html("");
              },
              function() {
                jq_cell.html("error");
              }
            );
          } else {
            // nothing we can handle, so keep old stuff
            jq_cell.html(old_content);
          }
        } else {
          jq_cell.html(old_content);
        }
      }

      // configure input field to behave like we want to
      jq_input_field
        .val(old_content)
        .click(function() {
          // chew click events so the table cell does not generate a new input field
          return false;
        })
        .blur(exit_handler)
        .keydown(function(e) {
          switch(e.keyCode) {
            case 13: exit_handler(); break;
            case 27: abort_editing(); break;
          }
        })
        .focus();
    });
  });

